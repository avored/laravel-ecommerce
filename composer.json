{
  "name": "mage2/laravel-ecommerce",
  "description": "Mage2 E Commerce is an Laravel Open Source Shopping Cart",
  "keywords": [
    "framework",
    "laravel",
    "ecommerce",
    "laravel 5",
    "shop",
    "shopping-cart",
    "e-commerce",
    "shopping cart",
    "e commerce"
  ],
  "license": "GPL-3.0",
  "type": "project",
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.0.0",
    "laravel/framework": "5.5.*",
    "laravel/passport": "^4.0@dev",
    "barryvdh/laravel-dompdf": "^0.8.0@dev",
    "mage2/module-installer": "dev-master",
    "mage2/install": "dev-master",
    "fabpot/goutte": "^3.2",
    "intervention/image": "^2.3@dev",
    "symfony/yaml": "^3.3",
    "wikimedia/composer-merge-plugin": "^1.3@dev"
  },
  "require-dev": {
    "filp/whoops": "~2.0",
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~6.0",
    "orchestra/testbench": "3.5"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/",
      "Mage2\\Ecommerce\\": "modules/mage2/ecommerce/src"

    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": [
      ]
    },
    "merge-plugin": {
        "include": [
            "modules/*/*/composer.json"
        ]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
