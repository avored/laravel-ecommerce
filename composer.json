{
  "name": "avored/laravel-ecommerce",
  "description": "AvoRed E Commerce is an Laravel Open Source Shopping Cart",
  "keywords": [
    "framework",
    "laravel",
    "ecommerce",
    "laravel 5",
    "shop",
    "shopping-cart",
    "e-commerce",
    "shopping cart",
    "e commerce"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.1.3",
    "barryvdh/laravel-dompdf": "0.8.*",
    "fabpot/goutte": "^3.2",
    "fideloper/proxy": "~4.0",
    "laravel/framework": "5.6.*",
    "laravel/passport": "5.0.*",
    "avored/ecommerce": "dev-master",
    "avored/install": "dev-master",
    "avored/module-installer": "dev-master",
    "stripe/stripe-php": "^6.3",
    "symfony/yaml": "^4.0.4"
  },
  "require-dev": {
    "filp/whoops": "~2.0",
    "nunomaduro/collision": "~1.1",
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "~1.0",
    "phpunit/phpunit": "~7.0",
    "symfony/thanks": "^1.0"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/",
      "AvoRed\\Ecommerce\\": "modules/avored/ecommerce/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": [
        "intervention/image"
      ]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
